LOCAL_INCLUDES += [
    '/config/external/gmp',
    '/third_party/gmp',
]

# We allow warnings for third-party code that can be updated from upstream.
AllowCompilerWarnings()

# Disable spammy warnings
if CONFIG['CC_TYPE'] in ('clang', 'clang-cl', 'gcc'):
    CFLAGS += [
        '-Wno-sign-compare',
        '-Wno-unreachable-code',
        '-Wno-unused-value',
        '-Wno-unused-variable',
    ]

if CONFIG['OS_TARGET'] == 'Linux':
    LOCAL_INCLUDES += [
        '/config/external/gmp/linux',
        '/third_party/gmp/mpn/x86_64/skylake/',
    ]

SOURCES += sorted(['../../../third_party/gmp/%s' % f for f in gmp_srcs])

FINAL_LIBRARY = 'lgpllibs'
